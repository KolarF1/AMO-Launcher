<Window x:Class="AMO_Launcher.Views.BackupProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Operation In Progress" Height="300" Width="500"
        WindowStartupLocation="CenterOwner" 
        Background="{StaticResource GeometricBackground}"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        BorderThickness="0">

    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1AFFFFFF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3DFFFFFF" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{DynamicResource AMOGoldGradientHorizontal}" Height="32">
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DragMoveCommand}"/>
            </Grid.InputBindings>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                <TextBlock x:Name="TitleTextBlock" Text="Operation In Progress" VerticalAlignment="Center" 
                           Foreground="Black" FontWeight="Medium" FontSize="16"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Background="{StaticResource SecondaryBrush}" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,15,20,5">
                <Border Width="40" Height="40" Background="{StaticResource PrimaryBrush}" 
                        BorderBrush="#333333" BorderThickness="1" CornerRadius="2">
                    <Image x:Name="GameIconImage" Width="28" Height="28" 
                           Source="pack://application:,,,/Icon.ico"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           RenderOptions.EdgeMode="Aliased"/>
                </Border>
                <TextBlock x:Name="GameNameTextBlock" Text="F1 2022" 
                           FontSize="18" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextBrush}" 
                           VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="20,10,20,10" VerticalAlignment="Center">
                <TextBlock x:Name="OperationTextBlock" Text="Operation in progress..." 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource TextBrush}"
                          Margin="0,0,0,5"/>

                <TextBlock x:Name="StatusTextBlock" 
                           Text="Initializing..."
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,10"/>

                <ProgressBar x:Name="ProgressBar" Height="10" Minimum="0" Maximum="100" Value="0"
                             Background="#222222" Foreground="{StaticResource AMOGoldGradient}"
                             BorderThickness="0"/>

                <iconPacks:PackIconBootstrapIcons x:Name="CompletedIcon" Kind="CheckCircleFill" 
                                                 Width="32" Height="32"
                                                 Foreground="LightGreen"
                                                 Margin="0,15,0,0"
                                                 HorizontalAlignment="Center"
                                                 Visibility="Collapsed"/>

                <iconPacks:PackIconBootstrapIcons x:Name="ErrorIcon" Kind="ExclamationCircleFill" 
                                                 Width="32" Height="32"
                                                 Foreground="Red"
                                                 Margin="0,15,0,0"
                                                 HorizontalAlignment="Center"
                                                 Visibility="Collapsed"/>
            </StackPanel>

            <TextBlock Grid.Row="2" Text="This process may take several minutes. Please do not close the launcher."
                      Foreground="{StaticResource TextSecondaryBrush}"
                      TextWrapping="Wrap" TextAlignment="Center"
                      Margin="20,0,20,10"
                      FontSize="12"/>
        </Grid>

        <Grid Grid.Row="2" Background="{StaticResource PrimaryBrush}" Height="45">
            <Button x:Name="CloseButton" Content="Please Wait..." Style="{StaticResource ActionButton}"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=CloseCommand}"
                    Background="#333333" Padding="15,6,15,6" 
                    HorizontalAlignment="Right" Margin="0,0,10,0" IsEnabled="False"
                    VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>