<Window x:Class="AMO_Launcher.Views.GameVerificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Game Verification Required" Height="380" Width="550"
        WindowStartupLocation="CenterOwner" 
        Background="{StaticResource GeometricBackground}"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        BorderThickness="0">

    <Window.Resources>
        <!-- Window Button Style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1AFFFFFF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3DFFFFFF" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#F1707A" TargetName="border"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="{DynamicResource AMOGoldGradientHorizontal}" Height="32">
            <!-- Using MouseDown event with command -->
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DragMoveCommand}"/>
            </Grid.InputBindings>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Icon and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                <TextBlock x:Name="TitleTextBlock" Text="Game Verification Required" VerticalAlignment="Center" 
                           Foreground="Black" FontWeight="Medium" FontSize="16"/>
            </StackPanel>

            <!-- Window Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" Content="&#xE8BB;" Style="{StaticResource CloseButtonStyle}" 
                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=CancelCommand}" 
                        ToolTip="Close"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Background="{StaticResource SecondaryBrush}" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Game Info -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,15,380,5">
                <Border Width="48" Height="48" Background="{StaticResource PrimaryBrush}" 
                        BorderBrush="#333333" BorderThickness="1" CornerRadius="2">
                    <Image x:Name="GameIconImage" Width="32" Height="32" 
                           Source="pack://application:,,,/Icon.ico"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           RenderOptions.EdgeMode="Aliased"/>
                </Border>
                <TextBlock x:Name="GameNameTextBlock" Text="F1 2022" 
                           FontSize="20" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextBrush}" 
                           VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>

            <!-- Message Content (moved up slightly) -->
            <StackPanel Grid.Row="1" Margin="20,5,20,0">

                <TextBlock x:Name="MessageTextBlock" 
                          Text="Before you can use mods with this game, the launcher needs to create a backup of the original game files."
                          Foreground="{StaticResource TextBrush}"
                          TextWrapping="Wrap" TextAlignment="Center"
                          Margin="0,0,0,15"
                          FontSize="14"/>

                <TextBlock Text="Why is this needed?"
                          FontWeight="SemiBold"
                          Foreground="{StaticResource AccentBrush}"
                          TextAlignment="Center"
                          Margin="0,10,0,5"/>

                <TextBlock Text="The launcher keeps a backup of your original game files so that mods can be applied and removed safely, without permanently changing your game installation."
                          Foreground="{StaticResource TextSecondaryBrush}"
                          TextWrapping="Wrap" TextAlignment="Center"
                          Margin="0,0,0,15"
                          FontSize="13"/>

                <Border BorderBrush="#333333" BorderThickness="0,1,0,0" Margin="0,5,0,15"/>

                <!-- Removed the bottom two text blocks as requested -->
            </StackPanel>
            <iconPacks:PackIconBootstrapIcons Kind="ExclamationTriangleFill" 
                                                 Width="32" Height="32"
                                                 Foreground="{StaticResource AMOGoldGradient}"
                                                 Margin="251,25,0,0"/>
        </Grid>

        <!-- Footer with Buttons -->
        <Grid Grid.Row="2" Background="{StaticResource PrimaryBrush}" Height="50">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource ActionButton}"
                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=CancelCommand}"
                        Background="#333333" Padding="15,6,15,6" Margin="0,0,10,0"
                        VerticalAlignment="Center"/>

                <Button x:Name="ContinueButton" Content="Continue" Style="{StaticResource PrimaryButton}"
                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ContinueCommand}"
                        Foreground="Black" FontWeight="Medium" Padding="15,6,15,6"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>