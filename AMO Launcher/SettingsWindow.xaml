<Window x:Class="AMO_Launcher.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Settings" Height="560" Width="700"
        WindowStartupLocation="CenterOwner" 
        Background="{StaticResource GeometricBackground}"
        WindowStyle="None" 
        ResizeMode="CanResize"
        AllowsTransparency="True"
        BorderThickness="0">

    <Window.Resources>
        <!-- Window Button Style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1AFFFFFF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3DFFFFFF" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#F1707A" TargetName="border"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
        </Style>

        <!-- Section Description Style -->
        <Style x:Key="SectionDescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,2,0,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="{DynamicResource AMOGoldGradientHorizontal}" Height="32" 
              MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Icon and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                <TextBlock Text="Settings" VerticalAlignment="Center" 
                           Foreground="Black" FontWeight="Medium" FontSize="16"/>
            </StackPanel>

            <!-- Window Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" Content="&#xE8BB;" Style="{StaticResource CloseButtonStyle}" 
                        Click="CloseButton_Click" ToolTip="Close"/>
            </StackPanel>
        </Grid>

        <!-- Main Content - No ScrollViewer -->
        <Grid Grid.Row="1" Background="{StaticResource SecondaryBrush}" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Settings Coming Soon -->
            <StackPanel Grid.Column="0" Margin="25,15,15,15">
                <!-- "Settings coming soon" message with icon for general settings -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0">
                    <iconPacks:PackIconBootstrapIcons Kind="Gear" 
                                                     Width="48" Height="48"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{StaticResource TextSecondaryBrush}" Opacity="0.7"/>
                    <TextBlock Text="Settings coming soon" 
                               FontSize="16" FontWeight="Medium"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,16,0,0"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Configuration options will be added in future updates" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" TextAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Separator -->
                <Border Height="1" Background="#333333" Margin="0,40,0,0"/>

                <!-- Advanced Settings Header -->
                <TextBlock Text="ADVANCED" FontSize="12" FontWeight="Bold" 
                           Foreground="{StaticResource AccentBrush}" Margin="0,12,0,6"/>

                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,0" Width="300">
                    <TextBlock Text="Game Data Management" 
                               FontSize="14" FontWeight="Medium"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,10"/>

                    <Button x:Name="ResetGameDataButton" 
                            Content="Reset Original GameData" 
                            Style="{StaticResource PrimaryButton}"
                            Click="ResetGameDataButton_Click"
                            Margin="0,5,0,8"
                            HorizontalAlignment="Left"
                            Width="200"
                            Padding="8,5,8,5">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconBootstrapIcons Kind="ArrowCounterclockwise" 
                                                     Width="16" Height="16"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding}" 
                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <TextBlock Text="Use this option if mods aren't applying correctly or if your game files have been updated. This will recreate the backup of your original game files."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" 
                               Margin="0,5,0,0"
                               FontSize="11"/>
                </StackPanel>
            </StackPanel>

            <!-- Right Column -->
            <StackPanel Grid.Column="1" Margin="15,15,25,15">
                <!-- Separator - Vertical Line -->
                <Border Width="1" Background="#333333" Height="430" 
                        HorizontalAlignment="Left" Margin="-15,0,0,0"/>

                <!-- About Section with some spacing to align with left column -->
                <TextBlock Text="ABOUT AMO LAUNCHER" Style="{StaticResource SectionHeaderStyle}" 
                           Margin="0,45,0,0"/>
                <TextBlock Text="Information about this application" 
                           Style="{StaticResource SectionDescriptionStyle}"/>

                <!-- About Content -->
                <StackPanel Margin="0,20,0,0">
                    <Image Source="pack://application:,,,/Icon.ico" Width="64" Height="64" 
                           HorizontalAlignment="Left" Margin="0,0,0,12"/>

                    <TextBlock Text="AMO Launcher" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock x:Name="VersionTextBlock" Text="Version 1.0.0" 
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                    <TextBlock Text="© 2025 AMO Launcher Team" 
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                    <TextBlock Text="A mod manager for F1 games." TextWrapping="Wrap"
                               Foreground="{StaticResource TextBrush}" Margin="0,12,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Footer with Save/Cancel Buttons -->
        <Grid Grid.Row="2" Background="{StaticResource PrimaryBrush}" Height="46">
            <StackPanel Orientation="Horizontal" Margin="559,0,0,0" Height="40" VerticalAlignment="Center">
                <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource ActionButton}"
                        Click="CancelButton_Click" Background="#333333" Padding="10,6,10,6" FontWeight="Medium"/>
                <Button x:Name="SaveButton" Content="Save" Style="{StaticResource PrimaryButton}"
                        Click="SaveButton_Click" Foreground="Black" FontWeight="Medium" Height="30" Padding="15,2,15,2"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>